<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtNombreAutoAnalisis"
            android:hint="Nombre quien autoriza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtPuestoAutoAnalisis"
            android:hint="Puesto quien autoriza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtNombreMuestreador"
            android:hint="Nombre muestreador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtPuestoMuestreador"
            android:hint="Puesto muestreador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtCorreo"
            android:hint="Correo destino"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Firma quien autoriza"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.aplicacionlesaa.SignatureView
            android:id="@+id/signatureAutoriza"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:text="Firma muestreador"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.aplicacionlesaa.SignatureView
            android:id="@+id/signatureMuestreador"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

    </LinearLayout>
</ScrollView>
