<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Barra lateral -->
        <View
            android:id="@+id/colorBar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#D32F2F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Primera fila: Num, Fecha, Registro -->
        <TextView
            android:id="@+id/tvnumMuestra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#D32F2F"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/colorBar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#1" />

        <TextView
            android:id="@+id/tvfecham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#212121"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvnumMuestra"
            app:layout_constraintStart_toEndOf="@+id/tvnumMuestra"
            app:layout_constraintTop_toTopOf="@+id/tvnumMuestra"
            tools:text="13/06/24" />

        <TextView
            android:id="@+id/tvregistroM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvfecham"
            app:layout_constraintStart_toEndOf="@+id/tvfecham"
            app:layout_constraintTop_toTopOf="@+id/tvfecham"
            tools:text="002118-1" />

        <!-- Botones de acción -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#C62828"
            app:layout_constraintEnd_toStartOf="@+id/btnEditar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Editar"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#2E7D32"
            app:layout_constraintEnd_toStartOf="@+id/btnCopiar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnCopiar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copiar"
            android:padding="6dp"
            android:src="?attr/actionModeCopyDrawable"
            android:tint="#1565C0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Segunda fila: Nombre + datos en línea -->
        <TextView
            android:id="@+id/tvnombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/colorBar"
            app:layout_constraintTop_toBottomOf="@+id/tvnumMuestra"
            tools:text="Agua potable" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <!-- Datos: Cantidad, Temp, Lugar en línea -->
        <TextView
            android:id="@+id/labelCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Cant:"
            android:textColor="#616161"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvnombre"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/tvnombre" />

        <TextView
            android:id="@+id/tvcantidadAprox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/labelCantidad"
            app:layout_constraintStart_toEndOf="@+id/labelCantidad"
            app:layout_constraintTop_toTopOf="@+id/labelCantidad"
            tools:text="200gr" />

        <TextView
            android:id="@+id/labelTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="T:"
            android:textColor="#616161"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvcantidadAprox"
            app:layout_constraintStart_toEndOf="@+id/tvcantidadAprox"
            app:layout_constraintTop_toTopOf="@+id/tvcantidadAprox" />

        <TextView
            android:id="@+id/tvtemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/labelTemp"
            app:layout_constraintStart_toEndOf="@+id/labelTemp"
            app:layout_constraintTop_toTopOf="@+id/labelTemp"
            tools:text="10°C" />

        <!-- Tercera fila: Lugar + Estudios -->
        <TextView
            android:id="@+id/tvlugar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#424242"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/colorBar"
            app:layout_constraintTop_toBottomOf="@+id/tvnombre"
            tools:text="Cocina palenque" />

        <!-- Estudios compactos -->
        <LinearLayout
            android:id="@+id/estudiosContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tvlugar"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/tvlugar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C8E6C9"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="M:"
                android:textColor="#1B5E20"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C8E6C9"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Ct,Cf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="#BBDEFB"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="F:"
                android:textColor="#0D47A1"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFisico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BBDEFB"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Ph,Turb" />

        </LinearLayout>

        <!-- Cuarta fila: Descripción compacta -->
        <TextView
            android:id="@+id/tvdescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#616161"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@+id/colorBar"
            app:layout_constraintTop_toBottomOf="@+id/tvlugar"
            tools:text="Desc: Se tomó en restaurante" />

        <!-- Observaciones y ID -->
        <TextView
            android:id="@+id/tvObservaciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#757575"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/tvServicioIDMuestras"
            app:layout_constraintStart_toEndOf="@+id/colorBar"
            app:layout_constraintTop_toBottomOf="@+id/tvdescripcion"
            tools:text="Obs: Se lavó las manos"
            />

        <TextView
            android:id="@+id/tvServicioIDMuestras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="#9E9E9E"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvObservaciones"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintTop_toTopOf="@+id/tvObservaciones"
            tools:text="ID:205" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>