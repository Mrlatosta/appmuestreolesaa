<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">



            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Descripción destacada -->
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Grid de información -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <!-- Cantidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">


                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Cantidad de Toma -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">


                <TextView
                    android:id="@+id/cantidad_de_toma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Sección de Estudios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estudios"
            android:textSize="12sp"
            android:textColor="#062D70"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Estudios Microbiológicos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <View
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/estudios_microbiologicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estudios Microbiológicos"
                android:textSize="14sp"
                android:textColor="#424242"/>
        </LinearLayout>

        <!-- Estudios Fisicoquímicos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <View
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:background="#2196F3"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/estudios_fisicoquimicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estudios Fisicoquímicos"
                android:textSize="14sp"
                android:textColor="#424242"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>