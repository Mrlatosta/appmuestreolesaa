<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMainActivity">


    <View
        android:id="@+id/rectangle_"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#1E133D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:text="Bienvenido a la App de Muestreo"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrearFolio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="568dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#69F0AE"
        android:text="Crear Folio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btnReenvio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="568dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00AEED"
        android:text="Reenviar Folio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContiFolio" />

    <Button
        android:id="@+id/btnContiFolio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="568dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#64FFDA"
        android:text="Continuar Folio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearFolio" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="236dp"
        android:layout_height="114dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logorectangulartrans" />


</androidx.constraintlayout.widget.ConstraintLayout>